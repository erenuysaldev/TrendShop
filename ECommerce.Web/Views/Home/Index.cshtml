        </div>
    </div>
    <div class="text-center mt-3">
        <a href="/Product" class="btn btn-primary">Tüm Ürünleri Gör</a>
    </div>
</div>

<!-- Özellikler -->
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 text-center">
            <div class="feature-box p-3">
                <i class="bi bi-truck fs-1 text-primary mb-3"></i>
                <h5>Hızlı Teslimat</h5>
                <p class="text-muted">Siparişleriniz 24 saat içinde kargoya verilir</p>
            </div>
        </div>
        <div class="col-md-3 text-center">
            <div class="feature-box p-3">
                <i class="bi bi-credit-card fs-1 text-primary mb-3"></i>
                <h5>Güvenli Ödeme</h5>
                <p class="text-muted">256-bit SSL güvenlik sertifikası</p>
            </div>
        </div>
        <div class="col-md-3 text-center">
            <div class="feature-box p-3">
                <i class="bi bi-headset fs-1 text-primary mb-3"></i>
                <h5>7/24 Destek</h5>
                <p class="text-muted">Müşteri hizmetlerimiz her zaman yanınızda</p>
            </div>
        </div>
        <div class="col-md-3 text-center">
            <div class="feature-box p-3">
                <i class="bi bi-arrow-repeat fs-1 text-primary mb-3"></i>
                <h5>Kolay İade</h5>
                <p class="text-muted">14 gün içinde koşulsuz iade garantisi</p>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }
        
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }
        
        .feature-box {
            border-radius: 10px;
            transition: all 0.3s ease;
        }
        
        .feature-box:hover {
            background-color: #f8f9fa;
            transform: translateY(-5px);
        }
        
        .carousel-item {
            height: 400px;
        }
        
        .carousel-item img {
            object-fit: cover;
            height: 100%;
        }
    </style>
}
